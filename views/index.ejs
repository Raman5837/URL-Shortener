<div class="container">
    <div class="row d-flex flex-column">
        <h1 class="heading font-weight-bold text-dark text-center my-5 display-3">URL SHORTNER</h1>

        <% if(typeof(error) !='undefined' ){%>

            <div class="col-md-8 mx-auto alert alert-warning alert-dismissible fade show" role="alert">
                <strong>
                    <%= error%>
                </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <%} %>

                <% if(typeof(success) !='undefined' ){%>

                    <div class="d-flex align-items-center justify-content-space-between col-md-8 mx-auto alert alert-success alert-dismissible fade show"
                        role="alert">
                        Your URL Is : <strong>

                            <input class="ShortUrlInput" type="text" value="<%= success%>" id="myInput"></strong>
                        <!-- The button used to copy the text -->
                        <button class="UrlButton" onclick="myFunction()">Copy To Clipboard</button>

                    </div>
                    <%} %>

                        <div class="col-md-8 shadow-lg p-3 mb-5 bg-white rounded my-4 mx-auto">

                            <form action="/" method="post">
                                <div class="form-group">
                                    <label class="mb-3" for="redirectedUrl">Enter URL</label>
                                    <input type="url" name="redirectedUrl" placeholder="Enter Your URL"
                                        class="form-control" required>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label class="mb-3" for="name">Enter Custom URL</label>
                                    <div class="d-flex align-items-center">
                                        <p class="mt-3" style="margin-right: 1rem;">
                                            https://<%= host %>
                                        </p>
                                        <input type="text" name="name" placeholder="Enter Custom URL Name"
                                            class="form-control ml-5">
                                    </div>

                                </div>

                                <div class="form-group py-3">
                                    <button type="submit" class="btn btn-block btn-dark py-2 Button"
                                        style="width: 100%;">Short
                                        URL</button>
                                </div>
                            </form>
                        </div>
    </div>
</div>
<script type="text/javascript">
    function myFunction() {
        /* Get the text field */
        var copyText = document.getElementById("myInput");

        /* Select the text field */
        copyText.select();
        copyText.setSelectionRange(0, 99999); /* For mobile devices */

        /* Copy the text inside the text field */
        document.execCommand("copy");

        /* Alert the copied text */
        alert("Copied the text: " + copyText.value);
    }
</script>